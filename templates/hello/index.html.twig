{% extends "base.html.twig" %}
{% block title "I've changed the title!" %}

{% block body %}

    <div>
        {% if messages|length > 0 %}
        {% for key, message in messages|slice(0, limit) %}
            <div>
                <a href="{{ path("app_show_one", { id: key }) }}">{{ message.message }}</a>
            </div>
            {{ include("hello/_message.html.twig", {message: message}) }}
        {% endfor %}
            {% else %}
            <div>There's nothing yet</div>
        {% endif %}
    </div>

{% endblock %}
